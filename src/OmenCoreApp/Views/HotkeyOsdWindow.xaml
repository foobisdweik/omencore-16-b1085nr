<Window x:Class="OmenCore.Views.HotkeyOsdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OmenCore OSD"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual">
    
    <Window.Resources>
        <!-- Gradient Background Brush -->
        <LinearGradientBrush x:Key="OsdBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E6181818" Offset="0"/>
            <GradientStop Color="#E6242424" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Accent Color -->
        <SolidColorBrush x:Key="OsdAccentBrush" Color="#00D4FF"/>
        
        <!-- Icon Colors by Mode -->
        <SolidColorBrush x:Key="PerformanceBrush" Color="#FF6B35"/>
        <SolidColorBrush x:Key="QuietBrush" Color="#4ECDC4"/>
        <SolidColorBrush x:Key="BalancedBrush" Color="#00D4FF"/>
        <SolidColorBrush x:Key="BoostBrush" Color="#FFD93D"/>
    </Window.Resources>
    
    <Border x:Name="OsdBorder"
            Background="{StaticResource OsdBackgroundBrush}"
            BorderBrush="{StaticResource OsdAccentBrush}"
            BorderThickness="2"
            CornerRadius="16"
            Padding="24,16"
            MinWidth="280"
            MaxWidth="400">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.6" BlurRadius="32" ShadowDepth="8" Direction="270"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Mode Icon -->
            <Border Grid.Column="0" 
                    Width="56" Height="56" 
                    CornerRadius="28"
                    Margin="0,0,16,0"
                    VerticalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#33FFFFFF" Offset="0"/>
                        <GradientStop Color="#11FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock x:Name="ModeIcon"
                           Text="ðŸŒ€"
                           FontSize="28"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Mode Text -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="ModeCategory"
                           Text="Fan Mode"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="#99FFFFFF"
                           Opacity="0.8"/>
                <TextBlock x:Name="ModeName"
                           Text="Balanced"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,2,0,0"/>
                <TextBlock x:Name="TriggerText"
                           Text="via Hotkey (Ctrl+Shift+F)"
                           FontSize="11"
                           Foreground="#66FFFFFF"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
