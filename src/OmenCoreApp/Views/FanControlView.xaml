<UserControl x:Class="OmenCore.Views.FanControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Fan &amp; Thermal Control" Style="{StaticResource Heading1}"/>
            <TextBlock Text="Customize fan curves and monitor cooling performance" 
                       Style="{StaticResource Caption}"/>
        </StackPanel>

        <!-- Fan Preset Selection -->
        <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="FAN PROFILES" 
                           Style="{StaticResource Label}" 
                           Margin="0,0,0,16"/>
                
                <!-- Quick Preset Buttons -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,20">
                    <TextBlock Text="Quick Presets:" 
                               Style="{StaticResource Caption}" 
                               FontSize="13"
                               VerticalAlignment="Center" 
                               Margin="0,0,16,0"/>
                    <Button Content="ðŸ”¥ Max" 
                            Command="{Binding ApplyMaxCoolingCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" Height="36" 
                            Margin="0,0,8,0"
                            ToolTip="100% fan speed - Use for benchmarks or extreme cooling needs"/>
                    <Button Content="ðŸŽ® Gaming" 
                            Command="{Binding ApplyGamingModeCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="100" Height="36" 
                            Margin="0,0,8,0"
                            ToolTip="Aggressive cooling for gaming - Fans ramp up quickly at 60Â°C+"/>
                    <Button Content="âš–ï¸ Auto" 
                            Command="{Binding ApplyAutoModeCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" Height="36" 
                            Margin="0,0,8,0"
                            ToolTip="BIOS default thermal policy - May be too conservative on some models"/>
                    <Button Content="ðŸ”‡ Silent" 
                            Command="{Binding ApplyQuietModeCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" Height="36"
                            ToolTip="Low fan speeds for quiet operation - May allow higher temps"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Choose Preset" 
                               Style="{StaticResource Caption}"
                               FontSize="13"
                               Margin="0,0,0,10"/>
                    <ComboBox ItemsSource="{Binding FanPresets}" 
                              SelectedItem="{Binding SelectedPreset}" 
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBox}" 
                              Height="42"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="New Preset Name" 
                               Style="{StaticResource Caption}"
                               FontSize="13"
                               Margin="0,0,0,10"/>
                    <TextBox Text="{Binding CustomPresetName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}" 
                             Height="42"
                             FontSize="14"
                             Padding="12,10"
                             VerticalContentAlignment="Center"
                             ToolTip="Enter a name to save your custom fan curve"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,20,0,0">
                    <Button Content="Apply Curve" 
                            Command="{Binding ApplyCustomCurveCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="140" Height="38" Margin="0,0,12,0"/>
                    <Button Command="{Binding SaveCustomPresetCommand}" 
                            Style="{StaticResource ModernButton}" 
                            Width="150" Height="38">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconExport}" Width="14" Height="14" Fill="{StaticResource TextPrimaryBrush}" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Preset" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Fan Curve and Telemetry -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="350"/>
                <ColumnDefinition Width="3*" MinWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Custom Fan Curve Editor -->
            <Border Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="CURVE EDITOR" 
                               Style="{StaticResource Label}" 
                               Margin="0,0,0,8"/>
                    
                    <!-- How Fan Curves Work - Explanation -->
                    <Border Background="#1A2A3A"
                            BorderBrush="{StaticResource AccentBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="How Fan Curves Work:" 
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBlueBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Style="{StaticResource Caption}" FontSize="11" TextWrapping="Wrap">
                                <Run Text="Each point sets fan speed at a temperature. Example:"/>
                                <LineBreak/>
                                <Run Text="â€¢ 40Â°C â†’ 30% = Fans run at 30% when CPU hits 40Â°C"/>
                                <LineBreak/>
                                <Run Text="â€¢ 80Â°C â†’ 100% = Full speed at 80Â°C"/>
                                <LineBreak/>
                                <Run Text="Lower starting temps = earlier fan ramp (cooler but louder)"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="Temperature â†’ Fan Speed" 
                               Style="{StaticResource Caption}"
                               FontSize="13"
                               Margin="0,0,0,12"/>
                    
                    <ListBox ItemsSource="{Binding CustomFanCurve}" 
                             Height="320"
                             Background="{StaticResource SurfaceDarkBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="12"
                             VirtualizingPanel.IsVirtualizing="True" 
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding TemperatureC, StringFormat='{}{0}Â°C'}" 
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="â†’" 
                                               FontSize="14"
                                               Margin="8,0"
                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding FanPercent, StringFormat='{}{0}% speed'}" 
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Background="{StaticResource SurfaceDarkBrush}"
                            BorderBrush="{StaticResource AccentBlueBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¡ Preset Guide:" 
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBlueBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Style="{StaticResource Caption}" FontSize="10" TextWrapping="Wrap">
                                <Run Text="â€¢ Gaming: Aggressive cooling, fans ramp at 60Â°C+"/>
                                <LineBreak/>
                                <Run Text="â€¢ Auto: BIOS default (may be conservative)"/>
                                <LineBreak/>
                                <Run Text="â€¢ Silent: Quiet but allows higher temps"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Thermal and Fan Telemetry -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Thermal Chart -->
                <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="TEMPERATURE HISTORY" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,16"/>
                        <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                               Height="200"/>
                    </StackPanel>
                </Border>

                <!-- Fan Telemetry -->
                <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="REAL-TIME STATUS" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding FanTelemetry}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceDarkBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="16,12"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Name}" 
                                                           FontSize="13" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                                           VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DutyCyclePercent, StringFormat='{}{0}%'}" 
                                                               FontSize="14" 
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource AccentBrush}" 
                                                               Margin="0,0,12,0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding SpeedRpm, StringFormat='{}{0} RPM'}" 
                                                               FontSize="12" 
                                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <ProgressBar Grid.Row="1"
                                                         Value="{Binding DutyCyclePercent}" 
                                                         Maximum="100" 
                                                         Height="8" 
                                                         Background="{StaticResource SurfaceMediumBrush}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <controls:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="1000" />
    </Grid>
</UserControl>
