<UserControl x:Class="OmenCore.Views.SystemOptimizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Toggle Switch Style -->
        <Style x:Key="OptimizationToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background" 
                                    CornerRadius="13" 
                                    Background="#3A3F5C"
                                    BorderThickness="0"/>
                            <Border x:Name="Thumb" 
                                    Width="22" Height="22" 
                                    CornerRadius="11" 
                                    Background="#6B7280"
                                    HorizontalAlignment="Left"
                                    Margin="2,2,2,2"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#00C8C8"/>
                                <Setter TargetName="Thumb" Property="Background" Value="White"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="OptimizationCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1D2E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>


        <!-- Preset Button Style -->
        <Style x:Key="PresetButton" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#252A40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#353B55"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#454B65"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource PresetButton}">
            <Setter Property="Background" Value="#00C8C8"/>
            <Setter Property="Foreground" Value="#0F111C"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PresetButton}">
            <Setter Property="Background" Value="#FF005C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Risk Badge Template -->
        <DataTemplate x:Key="RiskBadge">
            <Border CornerRadius="4" 
                    Padding="6,2" 
                    Background="{Binding RiskColor}"
                    Opacity="0.2">
                <TextBlock Text="{Binding RiskText}" 
                           FontSize="10" 
                           Foreground="{Binding RiskColor}"/>
            </Border>
        </DataTemplate>

        <!-- Optimization Item Template -->
        <DataTemplate x:Key="OptimizationItemTemplate">
            <Border Style="{StaticResource OptimizationCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="{Binding Name}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <Border CornerRadius="4" 
                                    Padding="6,2" 
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#1A00C8C8"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Risk}" Value="Medium">
                                                <Setter Property="Background" Value="#1AFFB800"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Risk}" Value="High">
                                                <Setter Property="Background" Value="#1AFF005C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding RiskText}" FontSize="10">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#00C8C8"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Risk}" Value="Medium">
                                                    <Setter Property="Foreground" Value="#FFB800"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Risk}" Value="High">
                                                    <Setter Property="Foreground" Value="#FF005C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding Description}" 
                                   FontSize="12" 
                                   Foreground="#9CA3AF"
                                   TextWrapping="Wrap"
                                   MaxWidth="500"/>
                        
                        <TextBlock Text="{Binding Warning}" 
                                   FontSize="11" 
                                   Foreground="#FFB800"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding HasWarning, Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>

                    <ToggleButton Grid.Column="1" 
                                  Style="{StaticResource OptimizationToggle}"
                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                  Click="OnToggleClicked"
                                  VerticalAlignment="Center"
                                  Tag="{Binding}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Background="#CC0F111C" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="âŸ³" 
                           FontSize="32" 
                           Foreground="#00C8C8"
                           HorizontalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotate"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#9CA3AF" 
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="24">
                <!-- Header -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="System Optimizer" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Fine-tune Windows for gaming performance" 
                                   FontSize="14" 
                                   Foreground="#9CA3AF"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="â†» Refresh" 
                            Style="{StaticResource PresetButton}"
                            Command="{Binding RefreshCommand}"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- Summary & Presets -->
                <Border Background="#1A1D2E" CornerRadius="12" Padding="20" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding OptimizationSummary}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"/>
                            <TextBlock Text="{Binding StatusMessage}" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="ðŸŽ® Gaming Max" 
                                    Style="{StaticResource AccentButton}"
                                    Command="{Binding ApplyGamingMaxCommand}"
                                    Margin="0,0,8,0"
                                    ToolTip="Apply all optimizations for maximum gaming performance"/>
                            <Button Content="âš–ï¸ Balanced" 
                                    Style="{StaticResource PresetButton}"
                                    Command="{Binding ApplyBalancedCommand}"
                                    Margin="0,0,8,0"
                                    ToolTip="Apply recommended optimizations only"/>
                            <Button Content="â†©ï¸ Revert All" 
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding RevertAllCommand}"
                                    ToolTip="Restore all settings to Windows defaults"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Two Column Layout -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        <!-- Power Optimizations -->
                        <TextBlock Text="âš¡ Power &amp; Performance" Style="{StaticResource SectionHeader}"/>
                        <ItemsControl ItemsSource="{Binding PowerOptimizations}" 
                                      ItemTemplate="{StaticResource OptimizationItemTemplate}"/>

                        <!-- Service Optimizations -->
                        <TextBlock Text="ðŸ”§ Windows Services" Style="{StaticResource SectionHeader}"/>
                        <ItemsControl ItemsSource="{Binding ServiceOptimizations}" 
                                      ItemTemplate="{StaticResource OptimizationItemTemplate}"/>

                        <!-- Network Optimizations -->
                        <TextBlock Text="ðŸŒ Network &amp; Latency" Style="{StaticResource SectionHeader}"/>
                        <ItemsControl ItemsSource="{Binding NetworkOptimizations}" 
                                      ItemTemplate="{StaticResource OptimizationItemTemplate}"/>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">
                        <!-- Input Optimizations -->
                        <TextBlock Text="ðŸŽ¯ Input &amp; Gaming" Style="{StaticResource SectionHeader}"/>
                        <ItemsControl ItemsSource="{Binding InputOptimizations}" 
                                      ItemTemplate="{StaticResource OptimizationItemTemplate}"/>

                        <!-- Visual Optimizations -->
                        <TextBlock Text="ðŸ–¼ï¸ Visual Effects" Style="{StaticResource SectionHeader}"/>
                        <ItemsControl ItemsSource="{Binding VisualOptimizations}" 
                                      ItemTemplate="{StaticResource OptimizationItemTemplate}"/>

                        <!-- Storage Optimizations -->
                        <TextBlock Text="ðŸ’¾ Storage &amp; Disk" Style="{StaticResource SectionHeader}"/>
                        <ItemsControl ItemsSource="{Binding StorageOptimizations}" 
                                      ItemTemplate="{StaticResource OptimizationItemTemplate}"/>
                    </StackPanel>
                </Grid>

                <!-- Footer Info -->
                <Border Background="#1A1D2E" CornerRadius="8" Padding="16" Margin="0,24,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Important Notes" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FFB800"
                                   Margin="0,0,0,8"/>
                        <TextBlock Foreground="#9CA3AF" FontSize="12" TextWrapping="Wrap">
                            â€¢ A system restore point is created before applying presets&#x0a;
                            â€¢ Some changes may require a restart to take effect&#x0a;
                            â€¢ Medium/High risk optimizations may affect system stability or features&#x0a;
                            â€¢ Use "Revert All" to restore original settings at any time
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
