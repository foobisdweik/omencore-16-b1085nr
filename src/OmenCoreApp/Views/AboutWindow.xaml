<Window x:Class="OmenCore.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About OmenCore" Height="360" Width="500" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="None" Icon="/Assets/OmenCore.ico"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown">
    <Border Background="{StaticResource BackgroundDarkBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0">
                    <Image Source="/Assets/logo.png" Width="80" Height="80" DockPanel.Dock="Left" Margin="0,0,20,0" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="OmenCore" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                        <TextBlock Text="Gaming Laptop and Desktop Control Center" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0" />
                    </StackPanel>
                </DockPanel>
                <Button Grid.Column="1"
                        Width="36"
                        Height="36"
                        Style="{StaticResource SecondaryButton}"
                        ToolTip="Close (Esc)"
                        Click="CloseClicked"
                        Content="✕"
                        FontSize="16"
                        Padding="0"/>
            </Grid>
            
            <StackPanel Grid.Row="1">
                <Border Background="{StaticResource SurfaceMediumBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock x:Name="VersionText" Text="Version 1.5.0-beta" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="BETA" FontSize="9" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="Advanced thermal, power, and RGB control for HP OMEN gaming laptops and desktops." 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,12" />
                        <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="✓ WMI/EC Fan Control with Custom Curves"/><LineBreak/>
                            <Run Text="✓ CPU Undervolt (Intel) &amp; Curve Optimizer (AMD)"/><LineBreak/>
                            <Run Text="✓ GPU Dynamic Boost (TGP/PPAB)"/><LineBreak/>
                            <Run Text="✓ Per-Game Profile Auto-Switching"/><LineBreak/>
                            <Run Text="✓ Multi-Zone RGB Keyboard Control"/><LineBreak/>
                            <Run Text="✓ Real-time Hardware Monitoring"/>
                        </TextBlock>
                        <TextBlock x:Name="UpdateStatusText" 
                                   Text="" 
                                   FontSize="12" 
                                   Foreground="{StaticResource AccentBlueBrush}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="© 2025 - " 
                               FontSize="12" 
                               Foreground="{StaticResource TextTertiaryBrush}" 
                               VerticalAlignment="Center" />
                    <TextBlock FontSize="12" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://github.com/theantipopau/omencore" 
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="{StaticResource AccentBlueBrush}">
                            GitHub
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Text=" · " 
                               FontSize="12" 
                               Foreground="{StaticResource TextTertiaryBrush}" 
                               VerticalAlignment="Center" />
                    <TextBlock FontSize="12" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://reddit.com/r/omencore" 
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="{StaticResource AccentBlueBrush}">
                            r/omencore
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button x:Name="CheckUpdatesButton" 
                            Content="⟳ Check for Updates" 
                            Width="180" 
                            Height="42"
                            Click="CheckUpdatesClicked" 
                            Style="{StaticResource ModernButton}" 
                            Padding="16,10" 
                            Margin="0,0,12,0"
                            ToolTip="Check GitHub for new releases" />
                    <Button x:Name="CloseButton"
                            Content="Close" 
                            Width="100" 
                            Height="42"
                            Click="CloseClicked" 
                            IsCancel="True"
                            Style="{StaticResource SecondaryButton}" 
                            Padding="16,10"
                            ToolTip="Close this window (Esc)" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
