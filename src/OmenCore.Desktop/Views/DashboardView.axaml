<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="OmenCore.Desktop.Views.DashboardView">
    
    <ScrollViewer>
        <StackPanel Spacing="16">
            
            <!-- Header -->
            <TextBlock Text="Dashboard" Classes="Title" />
            <TextBlock Text="System overview and real-time monitoring" Classes="Body" />
            
            <!-- Status Cards Row -->
            <Grid ColumnDefinitions="*,*,*,*" Margin="0,16,0,0">
                
                <!-- CPU Card -->
                <Border Grid.Column="0" Classes="Card">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Classes="StatusGood" />
                            <TextBlock Text="CPU" Classes="Subtitle" />
                        </StackPanel>
                        <TextBlock Text="--Â°C" Classes="Monospace Title" Margin="0,8,0,0" 
                                   Name="CpuTempText" Foreground="{DynamicResource OmenRedBrush}" />
                        <TextBlock Text="Temperature" Classes="Body" />
                    </StackPanel>
                </Border>
                
                <!-- GPU Card -->
                <Border Grid.Column="1" Classes="Card">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Classes="StatusGood" />
                            <TextBlock Text="GPU" Classes="Subtitle" />
                        </StackPanel>
                        <TextBlock Text="--Â°C" Classes="Monospace Title" Margin="0,8,0,0" 
                                   Name="GpuTempText" Foreground="{DynamicResource OmenRedBrush}" />
                        <TextBlock Text="Temperature" Classes="Body" />
                    </StackPanel>
                </Border>
                
                <!-- Fan Card -->
                <Border Grid.Column="2" Classes="Card">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Classes="StatusGood" />
                            <TextBlock Text="Fans" Classes="Subtitle" />
                        </StackPanel>
                        <TextBlock Text="-- RPM" Classes="Monospace Title" Margin="0,8,0,0" 
                                   Name="FanSpeedText" />
                        <TextBlock Text="Current Speed" Classes="Body" />
                    </StackPanel>
                </Border>
                
                <!-- Power Card -->
                <Border Grid.Column="3" Classes="Card">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Classes="StatusGood" />
                            <TextBlock Text="Power" Classes="Subtitle" />
                        </StackPanel>
                        <TextBlock Text="--W" Classes="Monospace Title" Margin="0,8,0,0" 
                                   Name="PowerText" />
                        <TextBlock Text="Total Draw" Classes="Body" />
                    </StackPanel>
                </Border>
                
            </Grid>
            
            <!-- Performance Mode Section -->
            <Border Classes="Card" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="Performance Mode" Classes="Subtitle" />
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                        <Button Content="Quiet" Classes="Secondary" Tag="Quiet" Click="PerformanceMode_Click" />
                        <Button Content="Balanced" Classes="Primary" Tag="Balanced" Click="PerformanceMode_Click" />
                        <Button Content="Performance" Classes="Secondary" Tag="Performance" Click="PerformanceMode_Click" />
                        <Button Content="Turbo" Classes="Secondary" Tag="Turbo" Click="PerformanceMode_Click" />
                    </StackPanel>
                    <TextBlock Text="Current: Balanced" Classes="Body" Margin="0,8,0,0" Name="CurrentModeText" />
                </StackPanel>
            </Border>
            
            <!-- Quick Actions -->
            <Border Classes="Card" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="Quick Actions" Classes="Subtitle" />
                    <WrapPanel Margin="0,16,0,0">
                        <Button Content="ðŸŒ€ Max Fans" Classes="Secondary" Margin="0,0,8,8" />
                        <Button Content="ðŸ’¡ Toggle Keyboard Light" Classes="Secondary" Margin="0,0,8,8" />
                        <Button Content="ðŸ“Š Open Monitor" Classes="Secondary" Margin="0,0,8,8" />
                        <Button Content="ðŸ”„ Refresh" Classes="Secondary" Click="Refresh_Click" />
                    </WrapPanel>
                </StackPanel>
            </Border>
            
            <!-- System Info -->
            <Border Classes="Card" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="System Information" Classes="Subtitle" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,16,0,0">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" Classes="Body" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="HP OMEN" Classes="Body" Margin="16,0,0,0" Name="ModelText" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="CPU:" Classes="Body" Margin="0,4,0,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="--" Classes="Body" Margin="16,4,0,0" Name="CpuNameText" />
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="GPU:" Classes="Body" Margin="0,4,0,0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="--" Classes="Body" Margin="16,4,0,0" Name="GpuNameText" />
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Platform:" Classes="Body" Margin="0,4,0,0" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Classes="Body" Margin="16,4,0,0" Name="PlatformText" />
                    </Grid>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    
</UserControl>
