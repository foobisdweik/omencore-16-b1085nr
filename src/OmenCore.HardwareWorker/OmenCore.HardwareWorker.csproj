<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>OmenCore.HardwareWorker</AssemblyName>
    <RootNamespace>OmenCore.HardwareWorker</RootNamespace>
    
    <!-- Hide console window when running -->
    <OutputType>WinExe</OutputType>
    
    <!-- Use main app icon -->
    <ApplicationIcon>..\OmenCoreApp\Assets\OmenCore.ico</ApplicationIcon>
    
    <!-- Version info -->
    <AssemblyVersion>1.5.0</AssemblyVersion>
    <FileVersion>1.5.0</FileVersion>
    <Version>1.5.0-beta3</Version>
    
    <!-- Trim unused code for smaller exe -->
    <PublishTrimmed>false</PublishTrimmed>
    <SelfContained>false</SelfContained>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibreHardwareMonitorLib" Version="0.9.4" />
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>

</Project>
